<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="PC80_Tester.ラベル貼り付け"
	xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	x:Name="Page"
	WindowTitle="Page"
	FlowDirection="LeftToRight"
	Height="660" Width="1330" Loaded="Page_Loaded">
    <Page.Resources>
        <Storyboard x:Key="BlinkButton" AutoReverse="True" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(Brush.Opacity)" Storyboard.TargetName="ButtonReturn">
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0.6"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <!--<Page.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource BlinkButton}"/>
        </EventTrigger>
    </Page.Triggers>-->
    <Canvas>
        <Canvas.Resources>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Padding" Value="0,0,0,0"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#FF04FFF4" BlurRadius="20" ShadowDepth="0" Direction="0"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </Canvas.Resources>
        <Image Height="539" Canvas.Left="25" Canvas.Top="97" Width="697" Source="/Resources/Pic/PC80シルク図.jpg" IsEnabled="False" Opacity="0.5"/>
        <Label Height="40" Canvas.Left="471" Canvas.Top="502" Width="194" Background="#FF09F2FD" Foreground="#FF060606" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="1" Content="{Binding Serial}" FontSize="16" BorderBrush="#FF0074FF"/>
        <Label x:Name="labelMessage" Content="デートコード、アイテム改版、Verラベルを貼り付けてください" Height="67" Canvas.Left="220" Canvas.Top="24" Width="1006" FontSize="44" FontFamily="Meiryo UI"/>
        <Label Height="37" Canvas.Left="617" Canvas.Top="448" Width="39" Background="#FF09F2FD" Foreground="#FF060606" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="1" Content="{Binding Serial}" FontSize="16" BorderBrush="#FF0074FF"/>
        <Button x:Name="ButtonReturn" Controls:ControlsHelper.ContentCharacterCasing="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="65" Width="159" BorderBrush="#FFABD6EA" FontSize="30" Canvas.Left="24" Style="{DynamicResource AccentedSquareButtonStyle}" BorderThickness="1" ClipToBounds="True" Canvas.Top="22" RenderTransformOrigin="11.977,3.9" FontFamily="Segoe UI Light" IsEnabled="{Binding StartButtonEnable}" Content="確認" Click="ButtonReturn_Click" >
            <Button.Background>
                <SolidColorBrush Color="#FF1B4F8D" Opacity="0.15"/>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect Color="#FF22F7F7" BlurRadius="50" Direction="0" ShadowDepth="0"/>
            </Button.Effect>
        </Button>
        <Label Height="37" Canvas.Left="353" Canvas.Top="231" Width="39" Background="#FF09F2FD" Foreground="#FF060606" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="1" Content="{Binding Serial}" FontSize="16" BorderBrush="#FF0074FF"/>
    </Canvas>
</Page>